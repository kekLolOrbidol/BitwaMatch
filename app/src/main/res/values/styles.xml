<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="text_item_title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_ability_label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_ability_value" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_card_header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/card_spell_background</item>
    </style>

    <style name="text_card_subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/card_spell_background</item>
    </style>

    <style name="text_card_label" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_card_spellbook</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_card_value" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_card_details" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/ui_templates_spacing_medium</item>
        <item name="android:background">@color/card_spell_background</item>
    </style>

    <style name="text_card_content" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">350sp</item>
        <item name="android:padding">@dimen/ui_templates_spacing_common</item>
        <item name="android:background">@color/card_spell_background</item>
    </style>

</resources>
